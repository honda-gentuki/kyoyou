<div class="container">
  <div class="your_container">
    <div class="chat-header">
      <%= link_to user_path(@user.id) do%>
        <div class="chat-user">
          <div class="user-image">
            <% if  @user.image? %>
              <%= image_tag  @user.image.url %>
            <% else %>
              <%= image_tag("/images/no-image.png") %>
            <% end %>
          </div>
          <div class="user-name">
            <%= @user.nickname %>先生
          </div>
        </div>
      <% end %>
      <div class="myself-user">
        <i class="bi bi-caret-left-fill"></i>
        <i class="bi bi-caret-left"></i>
        <i class="bi bi-caret-left-fill"></i>
      </div>
      <%= link_to user_path(current_user) do%>
        <div class ="chat-user">
          <div class="user-image">
            <% if current_user.image? %>
              <%= image_tag current_user.image.url %>
            <% else %>
              <%= image_tag("/images/no-image.png") %>
            <% end %>
          </div>
          <div class="user-name">
          <%= current_user.nickname %>先生
          </div>
        </div>
      <% end %>
    </div>


    <div class="bms_messages_container">
      <div class="bms_chat_header">
      </div>
      <div class="bms_messages">
        <div class="message">
          <% @chats.each do |chat| %>
            <% if chat.user_id == current_user.id %>
              <div class="bms_message bms_right">
                  <div class="bms_message_box">
                      <div class="bms_message_content">
                          <div class="bms_message_text">
                            <div style="text-align: left"><%= chat.message %></div>
                          </div>
                      </div>
                  </div>
                <%
=begin%>
 <div class="already__read">
                  <%= @read ? '既読' : '未読' %>
                </div> 
<%
=end%>
              </div>
              <div class="bms_clear"></div>
            <% else %>
              <div class="bms_message bms_left">
                  <div class="bms_message_box">
                      <div class="bms_message_content">
                          <div class="bms_message_text">
                            <div style="text-align: left;"><%= chat.message %></div>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="bms_clear"></div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <%= form_with model: @chat, remote: true, class: :"bms_send" do |f| %>
    <div class="chat-send">
      <%= f.text_field :message, class: :"bms_send_message" %>
      <%= f.hidden_field :room_id, class: :"bms_send_btn" %>
      <%= f.submit "送信", class: :form__btn_send %>
    </div>
    <% end %>
  </div>
</div>