<% visiter = notification.visiter %>
<% post = notification.post %>
<%= link_to user_path(notification.visiter) do %>
  <div class="notification-main">
    <div class="notification-flex">
      <div class="user-image">
        <% if notification.visiter.image? %>
          <%= image_tag notification.visiter.image.url %>
        <% else %>
          <%= image_tag("/images/no-image.png") %>
        <% end %>
      </div>
      <div class="follow-right">
        <%= link_to user_path(notification.visiter) do %>
        <% end %>
        <%= notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)}前)" %></span>
        <br>
        <div class=notification-comment>
          <% if !@comment.nil? %>
            <p class="moderate-font text-center" style="color: #C0C0C0;"><%= "コメント:#{@comment}" %></p>
          <% end %>
          <% if !@chat.nil? %>
            <p class="moderate-font text-center" style="color: #C0C0C0;"><%= "チャット:#{@chat}" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>