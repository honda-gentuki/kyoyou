<% if params[:page].nil? || params[:page] == 1 %>
  <% breadcrumb :search %>
<% else %>
  <% breadcrumb :posts_pagination, params[:page] %>
<% end %> 
<div class="main">
  <div class="user-main">
    <div class="inner">
      <div class="user__wrapper">
        <h2 class="page-heading">
          <%= "検索結果"%>
        </h2>
        <div class="card-wrap">
          <%= render partial: "post", collection: @posts %>
        </div>
        <div class="paginate">
          <%= paginate @posts %>
        </div>
      </div>
    </div>
  </div>
</div>